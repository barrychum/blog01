<aside>
  <h3>Recent Posts</h3>
  <ul class="post-list">
    {# We add | reverse to show newest first #}
    {% for post in collections.post | reverse %}
      <li>
        <a href="{{ post.url }}">{{ post.data.title }}</a><br>
<!--        <small>{{ post.date.toDateString() }}</small> -->
        <small>{{ post.date | postDate }}</small>
      </li>
    {% endfor %}
  </ul>
</aside>

