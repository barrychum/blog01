body { 
  font-family: sans-serif; 
  max-width: 1000px; 
  margin: 40px auto; 
  padding: 0 20px; 
  line-height: 1.6; 
}

/* Default for Mobile: Stack them vertically */
.container { 
  display: flex; 
  flex-direction: column; 
  gap: 30px; 
}

aside { 
  border-top: 1px solid #eee; 
  padding-top: 20px; 
}

/* Desktop: Side-by-side when the screen is wider than 768px */
@media (min-width: 768px) {
  .container { 
    flex-direction: row; 
  }
  
  main { flex: 3; }
  
  aside { 
    flex: 1; 
    border-top: none; 
    border-left: 1px solid #eee; 
    padding-left: 20px; 
    padding-top: 0;
  }
}

.post-nav {
  display: flex;
  justify-content: space-between;
  margin-top: 40px;
  padding-top: 20px;
}
.post-nav div {
  flex: 1;
}
  </style>


